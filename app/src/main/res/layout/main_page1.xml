<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/oscuroPrimary"
    android:orientation="vertical"
    android:fitsSystemWindows="true">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="70dp">



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

           >


            <ProgressBar
                android:id="@+id/progress_bar"
                style="@style/CircularDeterminateProgressBar"
                android:layout_width="300dp"
                android:layout_height="300dp"
                tools:progress="100" />
            <TextView
                android:id="@+id/text_view_progress"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:text="60%"
                android:textSize="50sp"

                android:fontFamily="@font/abeatby_kai_regular"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CO2"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="190dp"
                android:fontFamily="@font/abeatby_kai_regular"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="10dp">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/icono_bueno"
               />

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/icono_regular"
               android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"/>

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/icono_malo"
                />


        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="40dp"
        android:paddingLeft="10dp"
       >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:paddingRight="60dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:paddingLeft="10dp"
                android:src="@drawable/icono_temperatura"/>

            <TextView
                android:id="@+id/text_view_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22Â°C"
                android:textColor="@color/claroLetras"
                android:textSize="34dp"
                android:fontFamily="@font/abeatby_kai_regular"
               />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginLeft="25dp"
                android:src="@drawable/icono_humedad"/>

            <TextView
                android:id="@+id/text_view_hum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:layout_marginLeft="20dp"
                android:text="56%"
                android:textColor="@color/claroLetras"
                android:textSize="34dp"
                android:fontFamily="@font/abeatby_kai_regular"
                />


        </LinearLayout>


    </LinearLayout>



</LinearLayout>
