<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DryIce" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/oscuroPrimary</item>
        <item name="colorPrimaryVariant">@color/oscuroSecondary</item>
        <item name="colorOnPrimary">@color/azulAccent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/oscuroPrimary</item>
        <item name="colorSecondaryVariant">@color/oscuroSecondary</item>
        <item name="colorOnSecondary">@color/azulAccent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.DryIce.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/oscuroPrimary</item>
        <item name="colorPrimaryDark">@color/oscuroSecondary</item>
        <item name="colorAccent">@color/azulAccent</item>

        <item name="colorSecondary">@color/oscuroPrimary</item>
        <item name="colorSecondaryVariant">@color/oscuroSecondary</item>
        <item name="colorOnSecondary">@color/azulAccent</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/circle</item>
    </style>



</resources>